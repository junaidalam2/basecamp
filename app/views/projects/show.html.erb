<p style="color: green"><%= notice %></p>


  <% disabled_status = false %>
  <% if @project.status == "Inactive" %>
    <% disabled_status = true %>
  <% end %>


  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Project Name</th>
        <th>Description</th>
        <th>Timeframe for Completion</th>
        <th>Creation Date</th>
        <th>Project Lead</th>
        <th>Status</th>
        <th>Edit Project</th>
        <th>Deactivate Project</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <%= render @project %>
        <div>
          <td>
            <%= button_to "Edit project", edit_project_path(@project), :method => "get" , class: 'btn btn-outline-secondary btn-sm', disabled: disabled_status %>
          </td>
          <td>
            <%= button_to "Deactivate project", @project, method: :delete, class: 'btn btn-outline-danger btn-sm', disabled: disabled_status %>
          </td>
        </div>
      </tr>
    <tbody>
  </table>
  