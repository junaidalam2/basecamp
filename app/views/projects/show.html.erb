<p style="color: green"><%= notice %></p>


  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Project Name</th>
        <th>Description</th>
        <th>Timeframe for Completion</th>
        <th>Creation Date</th>
        <th>Project Lead</th>
        <th>Edit Project</th>
        <th>Destroy Project</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <%= render @project %>
        <div>
          <td>
            <%= button_to "Edit project", edit_project_path(@project), :method => "get" , class: 'btn btn-outline-secondary btn-sm' %>
          </td>
          <td>
            <%= button_to "Destroy project", @project, method: :delete, class: 'btn btn-outline-danger btn-sm' %>
          </td>
        </div>
      </tr>
    <tbody>
  </table>
  <%= button_to "<< to projects", projects_path, :method => "get" , class: 'btn btn-primary' %>
