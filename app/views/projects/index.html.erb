<p style="color: green"><%= notice %></p>

<h2>Projects</h2>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Project Name</th>
      <th>Description</th>
      <th>Timeframe for Completion</th>
      <th>Creation Date</th>
      <th>Project Lead</th>
      <th>Show Project</th>
    </tr>
  </thead>
  <tbody>
    <div id="projects">
      <% @projects.each do |project| %>
        <tr>
            <%= render project %>
          <td>
            <%= button_to "Show project", project, :method => "get" , class: 'btn btn-outline-secondary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </div>
  <tbody>
</table>
