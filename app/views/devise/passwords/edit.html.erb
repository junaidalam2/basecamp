<h2 class="h2">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <% character_min = "New passworrd" %>
    <% if @minimum_password_length %>
      <% character_min = "New password (%{min_length} characters minimum)" % {min_length: @minimum_password_length} %>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", :placeholder => character_min, :class => "form-control w-25" %>
  </div>

  <div class="row mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "Confirm new password", :class => "form-control w-25" %>
  </div>

  <div class="row mb-3">
    <%= f.submit "Change my password", :class => 'btn btn-info text-white' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
