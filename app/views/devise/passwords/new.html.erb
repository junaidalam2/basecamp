<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row mb-3">
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Email", :class => "form-control w-25" %>
    </div>
  </div>

  <div class="row mb-3">
    <div>
      <%= f.submit "Send me reset password instructions", :class => 'btn btn-info text-white' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
