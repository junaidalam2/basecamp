<p style="color: green"><%= notice %></p>

<h2 class="h2">Users</h2>
<br>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Title</th>
      <th>Department</th>
      <th>Profile</th>
      <th>Status</th>
      <th>Show User</th>
    </tr>
  </thead>
  <tbody>
    <div id="users">
      <% @users.each do |user| %>
        <tr>
            <%= render user %>
          <td>
            <%= button_to "Show user", user, :method => "get", class: 'btn btn-outline-secondary btn-sm'  %>
          </td>
        </tr>  
      <% end %>
    </div>
  <tbody>
</table>
