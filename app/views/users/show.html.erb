<p style="color: green"><%= notice %></p>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Title</th>
      <th>Department</th>
      <th>Profile</th>
      <th>Status</th>
      <th>Edit User</th>
      <th>Destroy User</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%= render @user %>
      <div>
        <td>
          <%= button_to "Edit user", edit_user_path(@user), :method => "get" , class: 'btn btn-outline-secondary btn-sm' %>
        </td>
        <td>
          <%= button_to "Destroy user", @user, method: :delete, class: 'btn btn-outline-danger btn-sm' %>
        </td>
      </div>
    </tr>
  <tbody>
</table>


